import { Component, OnInit } from '@angular/core';
import {NgbModal,ModalDismissReasons,NgbModalRef,NgbModalOptions} from '@ng-bootstrap/ng-bootstrap';
import { Observable } from 'rxjs';

import { BillService } from './bill.service';

@Component({
  selector: 'app-bill',
  templateUrl: './bill.component.html',
  styleUrls: ['./bill.component.css']
})
export class BillComponent implements OnInit {
  
  modalRef: NgbModalRef;

   name: string;
   address: string;
   type: string;
   color: string;
   alignment: string;
   height: number;
   width: number;
   space: number;
   rate: string;
   date: string;
   mandal: string;
   district: string;
   reporterName: string;
   amount: number;
   discount: string;
   others: string;
   gst: string;
   totalAmnt: string;
   advance: string;
   balance: string;
   sign: string;
   adminSign: string;
   contactName: string;
   phNo: number;
   remarks: string;
   public BillGeneration : any [];
   //size: number;
  constructor(private _billService: BillService,private modalService: NgbModal) { }

  ngOnInit() {
    this._billService.getEmployees().subscribe(data => this.BillGeneration = data).add(data => {

    });
  }

  openPopUp(content,ope){
    console.log("openPopUp");
    let ngbModalOptions: NgbModalOptions = {
    backdrop : 'static',
    keyboard : false
  };

  this.modalRef=this.modalService.open(content,ngbModalOptions);
  }

  save(){
    this.space = this.height * this.width;
    let dataObj = {
      name: this.name,
      address: this.address,
      type: this.type,
      color: this.color,
      alignment: this.alignment,
      height: this.height,
      width: this.width,
      space: this.space,
      rate: this.rate,
      date: this.date,
      mandal: this.mandal,
      district: this.district,
      reporterName: this.reporterName,
      amount: this.amount,
      discount: this.discount,
      others: this.others,
      gst: this.gst,
      totalAmnt: this.totalAmnt,
      advance: this.advance,
      balance: this.balance,
      sign: this.sign,
      adminSign: this.adminSign,
      contactName: this.contactName,
      phNo: this.phNo,
      remarks: this.remarks
    }
    console.log("data="+JSON.stringify(dataObj))
    this._billService.save(dataObj).add(data =>{
      console.log("Saved");
    })
  }

  reset(){
    this.name="",
    this.address="",
    this.type="",
    this.color="",
    this.alignment="",
    this.rate="",
    this.mandal="",
    this.district="",
    this.reporterName=""

  }




}

import { Injectable } from '@angular/core';
import { Http,Response,Headers,RequestOptions,RequestMethod } from '@angular/http';
import { HttpClient, HttpHeaders } from "@angular/common/http";
import 'rxjs/Rx';
import { Observable } from 'rxjs';
import { map } from 'rxjs/operators';


@Injectable({
  providedIn: 'root'
})
export class BillService {

  constructor(private _http: HttpClient) { }

  private requestOptions = { 
    headers: new HttpHeaders({ 'Content-Type': 'application/json' }) 
  };
  
  save(data){
    console.log(JSON.stringify(data))
    
 return this._http.post('http://localhost:8080/MyApplication/saveBill', data, this.requestOptions).subscribe(res =>
 console.log( JSON.stringify(res) ));
  }


    getEmployees()
    {
      console.log("Service")  
  let headerOptions = new Headers({'Content-Type':'application/json'}); 
  
  let requestOptions = new RequestOptions({method : RequestMethod.Get, headers : headerOptions});
    
    //this is a url which is used to connect with the rest class & retrieve data from the database to UI
    return this._http.get('https://jsonplaceholder.typicode.com/posts').map((response: Response) => response.json());
  }
  
}


